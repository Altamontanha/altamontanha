		<link rel="stylesheet" type="text/css" media="screen" href="/Content/themes/Cinza/css/Site.css" />
		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"></script>
		<script type="text/javascript">var j = jQuery.noConflict();</script>
		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.jnice.js")"></script>
	</head>
	<body>
		<div class="jNice">
			<div id="wrapper">
				<h1 class="logo"><a href="#"><span>Página Principal</span></a></h1>
				<div id="mainNav">
					<ul class="level1">
						<li>@Html.ActionLink("Usuário", "Index", "ManterUsuario")</li>
