@model IList<AltaMontanha.Models.Dominio.Servico>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">

    function ValidaExcluir() {
        return confirm("Você deseja realmente excluir este Serviço?");
    }

</script>

<h2>@ViewBag.Title</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Serviços</h3>
	<div class="grid">
		<table>
			<tr>
				<th>Nome</th>
				<th>Telefone</th>
				<th></th>
				<th></th>
			</tr>
			@foreach (AltaMontanha.Models.Dominio.Servico item in Model)
			{
			<tr>
				<td>
					@item.Nome
				</td>
				<td>
					@item.Telefone
				</td>
				<td class="action">
					@Html.ActionLink("Alterar", "AlterarServico", new { Codigo = item.Codigo }, new { @class = "edit"})
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirServico", new { Codigo = item.Codigo }, new { @class = "delete", @OnClick = "return ValidaExcluir()" })
				</td>
			</tr>
			}
		</table>
		<br />
	</div>
</div>