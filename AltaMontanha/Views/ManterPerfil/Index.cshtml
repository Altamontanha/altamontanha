@model IEnumerable<AltaMontanha.Models.Dominio.Perfil>

@{
    ViewBag.Title = "Perfil";
}

<h2>Perfil</h2>

<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Nome
        </td>
        <td>
            @item.Descricao
        </td>
        <td>
            @Html.ActionLink("Alterar", "AlterarPerfil", new { Codigo = item.Codigo }, new { @class = "edit" })
		</td>
		<td>
            @Html.ActionLink("Visualizar", "VisualizarPerfil", new { Codigo = item.Codigo }, new { @class = "view" })
        </td>
		<td>
		    @Html.ActionLink("Excluir", "ExcluirPerfil", new { Codigo = item.Codigo }, new { @class = "delete" })
        </td>
    </tr>
}
</table>

