@model AltaMontanha.Models.Dominio.Artigo

@{
    ViewBag.Title = "Artigo: Alterar";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Artigo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Categoria.Titulo)
        </div>
		<div class="editor-field">
			@Html.DropDownListFor(model => model.Categoria.Codigo, (SelectList) ViewData["Categorias"])
			@Html.ValidationMessageFor(model => model.Categoria.Codigo)
		</div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AnteTitulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AnteTitulo)
            @Html.ValidationMessageFor(model => model.AnteTitulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Resumo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Resumo)
            @Html.ValidationMessageFor(model => model.Resumo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Texto)
            @Html.ValidationMessageFor(model => model.Texto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Data)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Data)
            @Html.ValidationMessageFor(model => model.Data)
        </div>

        <p>
            <input type="submit" value="Alterar" />
        </p>
    </fieldset>
}