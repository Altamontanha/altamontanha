@model IEnumerable<AltaMontanha.Models.Dominio.Perfil>

@{
    ViewBag.Title = "Perfil";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Pesquisa de Perfil</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Perfis:</h3>
	<div class="grid">
		<table>
			<tr>
				<th>Nome</th>
				<th>Descrição</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>

		@foreach (var item in Model) {
			<tr>
				<td>
					@item.Nome
				</td>
				<td>
					@item.Descricao
				</td>
				<td  class="action">
					@Html.ActionLink("Alterar", "AlterarPerfil", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Visualizar", "VisualizarPerfil", new { Codigo = item.Codigo }, new { @class = "view" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirPerfil", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
		}
		</table>
	</div>
	<br />
</div>