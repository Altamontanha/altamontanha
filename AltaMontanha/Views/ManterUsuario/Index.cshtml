@model IEnumerable<AltaMontanha.Models.Dominio.Usuario>

@{
    ViewBag.Title = "Usuário";
}

<h2>Pesquisa de Usuário</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Usuários:</h3>
	<div class="grid">
		<table>
			<tr>
				<th>Nome</th>
				<th>Login</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			@foreach (var item in Model) 
			{
			<tr>
				<td>
					@item.Nome
				</td>
				<td>
					@item.Login
				</td>
				<td class="action">
					@Html.ActionLink("Alterar", "AlterarUsuario", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Visualizar", "VisualizarUsuario", new { Codigo = item.Codigo }, new { @class = "view" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirUsuario", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
			}
		</table>
	</div>
	<br />
</div>