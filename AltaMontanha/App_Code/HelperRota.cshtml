@helper VisualizarRota(AltaMontanha.Models.Dominio.Rota rota, int largura, int altura)
{
	<script type="text/javascript"
		src="http://maps.google.com/maps/api/js?sensor=false">
	</script>

	<script type="text/javascript">
		j(document).ready(function () {
			//var latlng = new google.maps.LatLng(-34.397, 150.644);
			var myOptions = {
				zoom: 12,
				//center: latlng,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			};
			map = new google.maps.Map(document.getElementById("mapRotas"),
			myOptions);

			@* TODO: trocar quando for pra produção 
			ctaLayer = new google.maps.KmlLayer('@string.Concat("/AppData/Rota/", rota.Caminho)');
			*@
			ctaLayer = new google.maps.KmlLayer('http://www.mcorp.com.br/kmls/aconcagua.kml');
			ctaLayer.setMap(map);
		});
	</script>

	<div id="mapRotas" style="width:@string.Concat(largura, "px"); height:@string.Concat(altura, "px")"></div>	
}