@model IEnumerable<AltaMontanha.Models.Dominio.Foto>

@{
    ViewBag.Title = "Pesquisa de Foto";
}

<h2>@ViewBag.Title</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Fotos:</h3>
	<div class="grid">
		<table>
			<tr>
				<th>
					Foto
				</th>
				<th>
					Legenda
				</th>
				<th>
					Autor
				</th>
				<th></th>
				<th></th>
			</tr>
		@foreach (var item in Model) 
		{
			<tr>
				<td>
					<img src="/ManterFoto/Foto/@item.Caminho?Tamanho=340" alt="@item.Legenda" width="120"/>
				</td>
				<td>
					@item.Legenda
				</td>
				<td>
					@item.Autor
				</td>
				<td class="action">
					@Html.ActionLink("Alterar", "AlterarFoto", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirFoto", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
		}
		</table>
		@HelperGrid.GerarPaginacao(Convert.ToInt32(ViewData["Total"]), Convert.ToInt32(ViewData["Pagina"]), "ManterFoto", AltaMontanha.Utilitario.Constante.TamanhoPagina)
		<br />
	</div>
</div>
