@model IEnumerable<AltaMontanha.Models.Dominio.Coluna>

@{
    ViewBag.Title = "AltaMontanha.com - Colunas";
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";
}

<div id="main-box">
    <div id="conteudoPrincipal">
		<h2>Colunas</h2>
        @HelperColunista.FiltroColunista(ViewBag.Usuarios, @HttpContext.Current.Request.Path, ViewBag.TotalMaterias, ViewBag.CodigoColunista, Html)
        <br />
		<div>
			<ul id="listagem">
                @foreach (var coluna in Model)
                {
                    <li><a href="/Colunas/@coluna.Codigo/@coluna.Slug">
                        <center>
                            <img src="/ManterFoto/Foto/@coluna.FotoCapa.Caminho?Tamanho=340" alt="@coluna.FotoCapa.Legenda" width="280" height="198" />
                        </center>
                        <div class="clear">
                        </div>
                        <p class="texto">
                            @coluna.Titulo
                            <p class="data center">
                                Autor: @coluna.Autor.Nome
                            </p>
                            <p class="data center">
                                Data: @String.Format("{0:dd/MM/yyyy}", coluna.Data)</p>
                        </p>
                    </a></li>
                }
			</ul>
		</div>
        <center>
            @HelperGrid.GerarPaginacao(int.Parse(ViewBag.TotalMaterias.ToString()), int.Parse(ViewBag.Pagina.ToString()), "Colunas", AltaMontanha.Utilitario.Constante.TamanhoMaterias, true)
        </center>
	</div>
</div>