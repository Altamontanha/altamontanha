@model IEnumerable<AltaMontanha.Models.Dominio.Depoimento>

@{
    ViewBag.Title = "Depoimento";
}

<h2>Pesquisa de Depoimento</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Depoimentos:</h3>
	<div class="grid">
		<table>
			<tr>
				<th>Nome</th>
				<th>Data</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			@foreach (var item in Model) 
			{
			<tr>
				<td>
					@item.Autor

				</td>
				<td>
					@item.Data.ToString("dd/MM/yyyy")
				</td>
				<td class="action">
					@Html.ActionLink("Alterar", "AlterarDepoimento", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Visualizar", "VisualizarDepoimento", new { Codigo = item.Codigo }, new { @class = "view" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirDepoimento", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
			}
		</table>
	</div>
	<br />
</div>