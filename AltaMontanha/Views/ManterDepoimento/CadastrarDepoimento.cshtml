@model AltaMontanha.Models.Dominio.Depoimento

@{
    ViewBag.Title = "Depoimento: Cadastrar";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>@ViewBag.Title</h2>
<div class="clear"></div>

@using (Html.BeginForm("CadastrarDepoimento", "ManterDepoimento", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Usuário</legend>
        <p>
            @Html.LabelFor(model => model.Autor)
            @Html.TextBoxFor(model => model.Autor, new { @class = "text-long" })
            @Html.ValidationMessageFor(model => model.Autor)
        </p>
        <p>
            @Html.LabelFor(model => model.Texto)
            @Html.TextAreaFor(model => model.Texto)
            @Html.ValidationMessageFor(model => model.Texto)
        </p>

        <br />
		<p><input type="submit" value="Cadastrar" /></p>
    </fieldset>
}