						<li>@Html.ActionLink("Sair", "Sair", "ManterAutenticacao")</li>
					</ul>
				</div>
				<div id="containerHolder">
					<div id="container">
						<div id="sidebar">
							@Html.Partial("../" + @ViewContext.RouteData.Values["Controller"] + "/_Sidebar")
						</div>  
						<div id="main">
							@RenderBody()
						</div>
						<div class="clear"></div>
					</div>
				</div>
			</div>
		</div>
	</body>
