@model AltaMontanha.Models.Dominio.Artigo

@{
    ViewBag.Title = @Model.Titulo + " - AltaMontanha.com";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}
<link rel="stylesheet" type="text/css" media="screen" href="/Content/themes/Cinza/css/nyroModal.css" />
<script src="/Scripts/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="/Scripts/jquery.nyromodal.js" type="text/javascript"></script>
<script type="text/javascript">
	var j = jQuery.noConflict();

	j(function () 
	{
		j('.nyroModal').nyroModal();
	});
</script>
<div id="main-box">
	<div id="conteudo">
		<h2>@Model.Titulo</h2>
		<p class="data">@String.Format("{0:g}", Model.Data)</p>
		<p class="resumo">@Model.Resumo</p>
		<div class="texto">
			@Html.Raw(Model.Texto)
		</div>
	</div>
	<div class="col-fotos">
		<div id="quadrado-home">
			<p class="publicidade">Publicidade</p>
			<img src="/content/themes/publico/img/pic.jpg" width = "200px" height="200px" alt="publicidade"/>
			@* TODO: Banner. *@
		</div>
		<div class="fotos">
			<ul>
				@foreach (var foto in Model.ListaFotos)
				{
					<li>
						<a href="/AppData/Foto/640x480/@foto.Caminho" class="nyroModal" title="@foto.Legenda" rel="galeria">
							<img src="/AppData/Foto/145x95/@foto.Caminho" alt="@foto.Legenda" />
							<div>@foto.Legenda</div>
						</a>
					</li>
				}
			</ul>
		</div>
	</div>
</div>
