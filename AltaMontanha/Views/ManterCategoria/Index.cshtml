@model IEnumerable<AltaMontanha.Models.Dominio.Categoria>

@{
    ViewBag.Title = "Pesquisa de Categoria";
}

<h2>@ViewBag.Title</h2>
<div class="clear"></div>
<div id="divGrid">
	<h3>Categorias:</h3>
	<div class="grid">
		<table>
			<tr>
				<th>
					Titulo
				</th>
				<th>
					Descrição
				</th>
				<th></th>
				<th></th>
			</tr>

		@foreach (var item in Model) {
			<tr>
				<td>
					@item.Titulo
				</td>
				<td>
					@item.Descricao
				</td>
				<td class="action">
					@Html.ActionLink("Alterar", "AlterarCategoria", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirCategoria", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
		}
		</table>
		<br />
	</div>
</div>
