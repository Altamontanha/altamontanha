@model IEnumerable<AltaMontanha.Models.Dominio.Banner>

@{
    ViewBag.Title = "Pesquisa de Banners";
}
<h2>@ViewBag.Title</h2>
<div id="divGrid">
	<h3>Banners</h3>
	<div class="grid">
		<table>
			<tr>
				<th>Local</th>
				<th>Título</th>
				<th></th>
				<th></th>
			</tr>
			@foreach (var item in Model) 
			{
			<tr>
				<td>
					@item.Local.Descricao
				</td>
				<td>
					@item.Titulo
				</td>
				<td class="action">
					@Html.ActionLink("Editar", "AlterarBanner", new { Codigo = item.Codigo }, new { @class = "edit" })
				</td>
				<td class="action">
					@Html.ActionLink("Excluir", "ExcluirBanner", new { Codigo = item.Codigo }, new { @class = "delete" })
				</td>
			</tr>
		}
		</table>
		<br />
	</div>
</div>